<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.pharmacy.PharmacyController"
      alignment="TOP_CENTER" spacing="10" styleClass="root">


  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>

  <Label fx:id="welcomeText" text="Welcome to Pharmacy Management" styleClass="title"/>

  <HBox alignment="CENTER" spacing="10">
    <Button fx:id="fetchDataButton" text="Fetch All Data" onAction="#fetchDataAndPopulate"/>
    <MenuButton fx:id="categoryFilterMenu" text="Filter by Category">
      <items>
        <MenuItem text="All Categories" onAction="#handleCategoryFilter"/>
      </items>
    </MenuButton>
    <MenuButton fx:id="subCategoryFilterMenu" text="Filter by SubCategory">
      <items>
        <MenuItem text="All SubCategories" onAction="#handleSubCategoryFilter"/>
      </items>
    </MenuButton>
    <MenuButton fx:id="brandFilterMenu" text="Filter by Brand">
      <items>
        <MenuItem text="All Brands" onAction="#handleBrandFilter"/>
      </items>
    </MenuButton>
  </HBox>

  <Label fx:id="statusLabel" text="Ready" styleClass="status-label"/>

  <TableView fx:id="productTableView" VBox.vgrow="ALWAYS" minHeight="400">
    <placeholder>
      <Label text="No products to display. Please click 'Fetch All Data' to load them."/>
    </placeholder>
    <columns>
      <TableColumn fx:id="medicineIdColumn" text="ID" prefWidth="50"/>
      <TableColumn fx:id="productNameColumn" text="Product Name" prefWidth="150"/>
      <TableColumn fx:id="brandColumn" text="Brand" prefWidth="100"/>
      <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
      <TableColumn fx:id="priceColumn" text="Price" prefWidth="80"/>
      <TableColumn fx:id="categoryColumn" text="Category" prefWidth="120"/>
      <TableColumn fx:id="subCategoryColumn" text="SubCategory" prefWidth="120"/>
    </columns>
  </TableView>

</VBox>
